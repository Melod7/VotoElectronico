@model VotoElectronico.MVC.ViewModels.VotanteLoginViewModel
@{
    ViewData["Title"] = "Ingreso de Administrador";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-body">
                    <h3 class="text-center mb-3">Ingreso de Administrador</h3>

                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label">Correo institucional</label>
                            <input type="email"
                                   class="form-control"
                                   placeholder="correo@institucion.gob.ec">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Contraseña</label>
                            <input type="password"
                                   class="form-control"
                                   placeholder="********">
                        </div>

                        <button class="btn btn-warning w-100">
                            Ingresar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>