@{
    ViewData["Title"] = "Administrador";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-body text-center">
            <h2 class="mb-3">Panel de Administrador</h2>
            <p class="text-muted">
                Desde aquí se administrará el sistema de votación,
                resultados, gráficos y bitácora.
            </p>

            <hr />

            <div class="row">
                <div class="col-md-4">
                    <div class="alert alert-primary">
                        Resultados (próximamente)
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="alert alert-success">
                        Gráficas (próximamente)
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="alert alert-warning">
                        Bitácora (próximamente)
                    </div>
                </div>
            </div>
        </div>
    </div>
