<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Sistema de Voto</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
        }

        .header {
            background: #111;
            color: white;
            padding: 12px;
            text-align: center;
            font-weight: bold;
            letter-spacing: 1px;
        }

        footer {
            text-align: center;
            padding: 10px;
            color: #777;
            font-size: 14px;
        }
    </style>
</head>

<body>

    <div class="header">
        Sistema de Voto Electrónico Ecuador
    </div>

    <div>
        @RenderBody()
    </div>

    <footer>
        © 2026 Voto Electrónico
    </footer>

</body>
</html>