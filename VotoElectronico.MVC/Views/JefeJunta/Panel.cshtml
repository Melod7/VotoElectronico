@{
    ViewData["Title"] = "Panel Jefe de Junta";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        background: linear-gradient(135deg,#e3f2fd,#bbdefb,#90caf9);
        font-family: 'Segoe UI';
    }

    .panel {
        max-width: 700px;
        margin: auto;
        margin-top: 80px;
        background: white;
        padding: 50px;
        border-radius: 20px;
        box-shadow: 0 15px 40px rgba(0,0,0,0.15);
        text-align: center;
    }

    .btn-main {
        background: #1565c0;
        border: none;
        font-size: 20px;
        font-weight: bold;
        padding: 15px;
        border-radius: 12px;
    }

        .btn-main:hover {
            background: #0d47a1;
        }
</style>

<div class="panel">

    <h2 class="mb-4">✔ Bienvenido Jefe de Junta</h2>

    <a asp-action="Validar" class="btn btn-main text-white w-100">
        Validar votante y generar código
    </a>
    <a asp-action="VotantesMesa" class="btn btn-info w-100 mt-3">
        🗳️ Ver votantes por mesa
    </a>
</div>