@{
    Layout = null;
    ViewData["Title"] = "Login Jefe de Junta";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Jefe de Junta</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            margin: 0;
            height: 100vh;
            background: linear-gradient(135deg, #e3f2fd, #bbdefb, #90caf9);
            font-family: 'Segoe UI';
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-card {
            width: 420px;
            background: white;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 15px 40px rgba(0,0,0,0.15);
            text-align: center;
        }

        .titulo {
            font-size: 22px;
            font-weight: bold;
            color: #0d47a1;
        }

        .logo {
            font-size: 45px;
        }

        .btn-login {
            background: #1565c0;
            border: none;
            font-weight: bold;
            font-size: 18px;
        }

            .btn-login:hover {
                background: #0d47a1;
            }

        .input-form {
            border-radius: 10px;
            padding: 12px;
        }

        .sistema {
            position: absolute;
            top: 20px;
            left: 30px;
            font-weight: bold;
            color: #0d47a1;
        }
    </style>
</head>

<body>

    <div class="sistema">
        🗳️ Sistema de Voto Electrónico Ecuador
    </div>

    <div class="login-card">

        <div class="logo">👨‍💼</div>

        <h3 class="titulo mb-3">Jefe de Junta</h3>

        <form method="post">

            <input type="email"
                   name="correo"
                   class="form-control input-form mb-3"
                   placeholder="Correo institucional"
                   required />

            <input type="password"
                   name="clave"
                   class="form-control input-form mb-4"
                   placeholder="Contraseña"
                   required />

            <button class="btn btn-login text-white w-100">
                Ingresar
            </button>

        </form>

    </div>

</body>
</html>