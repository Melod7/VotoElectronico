@{
    ViewData["Title"] = "Voto ya registrado";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow text-center">
                <div class="card-header bg-warning text-dark">
                    <h4>⚠️ Voto ya registrado</h4>
                </div>
                <div class="card-body">
                    <p class="fs-5">
                        Usted ya ha emitido su voto.
                    </p>
                    <p>
                        El sistema no permite votar más de una vez.
                    </p>
                    <a asp-controller="Auth"
                       asp-action="Votante"
                       class="btn btn-primary mt-3">
                        Volver al inicio
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>