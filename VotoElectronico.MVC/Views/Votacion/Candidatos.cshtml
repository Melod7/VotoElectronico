@model List<VotoElectronico.MVC.Models.Candidato>

@{
    ViewData["Title"] = "Seleccione su candidato";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        background: linear-gradient(135deg,#0d47a1,#42a5f5);
    }

    .card-candidato {
        border-radius: 20px;
        transition: 0.3s;
        cursor: pointer;
        border: 3px solid transparent;
    }

        .card-candidato:hover {
            transform: scale(1.02);
        }

    .card-seleccionada {
        border: 3px solid #28a745;
        background: #e8f5e9;
    }

    .foto {
        width: 90px;
        height: 90px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 10px;
    }

    .btn-votar {
        width: 300px;
        font-size: 20px;
        padding: 12px;
        border-radius: 12px;
    }
</style>

<div class="container mt-5">

    <h2 class="text-center text-white mb-4">🗳 Seleccione su candidato</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger text-center">
            @TempData["Error"]
        </div>
    }

    <form asp-action="Votar" method="post" onsubmit="return confirmarVoto()">

        <input type="hidden" id="candidatoId" name="candidatoId" />

        <div class="row">

            @foreach (var c in Model)
            {
                <div class="col-md-6 mb-4">

                    <div class="card card-candidato shadow p-4 text-center"
                         onclick="seleccionar(@c.Id, this)">

                        <div class="badge bg-primary mb-2">@c.Partido</div>

                        <div class="row">
                            <div class="col">
                                <img src="~/images/@c.FotoPresidente" class="foto" />
                                <h5>@c.NombrePresidente</h5>
                                <small>Presidente</small>
                            </div>

                            <div class="col">
                                <img src="~/images/@c.FotoVicepresidente" class="foto" />
                                <h5>@c.NombreVicepresidente</h5>
                                <small>Vicepresidente</small>
                            </div>
                        </div>

                        <button type="button"
                                class="btn btn-outline-success mt-3">
                            ✔ Seleccionar esta lista
                        </button>

                    </div>

                </div>
            }

        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-success btn-votar">
                🗳 VOTAR
            </button>
        </div>

    </form>
</div>

<script>

    let seleccionado = null;

    function seleccionar(id, card) {

        document.getElementById("candidatoId").value = id;

        if (seleccionado)
            seleccionado.classList.remove("card-seleccionada");

        card.classList.add("card-seleccionada");
        seleccionado = card;
    }

    function confirmarVoto() {

        let id = document.getElementById("candidatoId").value;

        if (!id) {
            alert("Seleccione una lista antes de votar");
            return false;
        }

        return confirm("¿Está seguro que desea emitir su voto? Esta acción no se puede cambiar.");
    }

</script>