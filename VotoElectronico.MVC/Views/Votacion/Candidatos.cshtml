@model List<Candidato>

<h2>Candidatos</h2>

@foreach (var candidato in Model)
{
    <div class="card mb-2">
        <div class="card-body">
            <h5>@candidato.Nombre</h5>
            <p>Partido: @candidato.Partido.Nombre</p>

            <form asp-action="Votar" method="post">
                <input type="hidden" name="candidatoId" value="@candidato.Id" />
                <button class="btn btn-success">
                    Votar
                </button>
            </form>
        </div>
    </div>
}