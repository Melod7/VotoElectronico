@{
    ViewData["Title"] = "Ingreso a votar";
}

<div class="container mt-5">
    <div class="card shadow p-4 mx-auto" style="max-width:520px;border-radius:18px;">

        <h2 class="text-center mb-4">🗳️ Ingreso del votante</h2>

        <form asp-controller="Votacion" asp-action="Ingresar" method="post">

            <div class="mb-3">
                <label class="form-label fw-bold">Número de cédula</label>
                <input type="text" name="cedula" class="form-control form-control-lg" required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Código de votación</label>
                <input type="text" name="codigo" class="form-control form-control-lg" required />
            </div>

            <button type="submit" class="btn btn-success w-100 btn-lg">
                Validar y continuar
            </button>
        </form>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger mt-3 text-center">
                @ViewBag.Error
            </div>
        }

    </div>
</div>