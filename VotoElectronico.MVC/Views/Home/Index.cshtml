@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Voto Electrónico Ecuador</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            margin: 0;
            height: 100vh;
            background-image: url('/images/fondo-votacion.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', sans-serif;
        }

        .panel {
            background: rgba(255,255,255,0.92);
            padding: 40px;
            border-radius: 25px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.25);
            width: 900px;
            max-width: 95%;
        }

        .titulo {
            text-align: center;
            font-weight: bold;
            color: #0d6efd;
            margin-bottom: 30px;
        }

        .botones {
            display: flex;
            justify-content: space-between;
            gap: 20px;
            flex-wrap: wrap;
        }

        .btn-home {
            flex: 1;
            min-width: 180px;
            height: 120px;
            font-size: 22px;
            font-weight: bold;
            border-radius: 18px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-decoration: none;
            color: white;
            transition: 0.25s;
        }

            .btn-home:hover {
                transform: scale(1.05);
                box-shadow: 0 10px 20px rgba(0,0,0,0.25);
            }

        .votar {
            background: #28a745;
        }

        .junta {
            background: #0d6efd;
        }

        .admin {
            background: #212529;
        }

        .resultados {
            background: #ffc107;
            color: black;
        }

        .icono {
            font-size: 35px;
            margin-bottom: 10px;
        }

        .footer {
            text-align: center;
            margin-top: 25px;
            font-size: 13px;
            color: #777;
        }
    </style>
</head>

<body>

    <div class="panel">

        <h2 class="titulo">Sistema de Voto Electrónico</h2>

        <div class="botones">

            <a href="/Votacion/Ingresar" class="btn-home votar">
                <div class="icono">🗳️</div>
                Votar
            </a>

            <a href="/JefeJunta/Login" class="btn-home junta">
                <div class="icono">👥</div>
                Jefe de Junta
            </a>

            <a href="/Auth/LoginAdmin" class="btn-home admin">
                <div class="icono">🔐</div>
                Administrador
            </a>

            <a href="/Resultados" class="btn-home resultados">
                <div class="icono">📊</div>
                Resultados
            </a>

        </div>

        <div class="footer">
            © 2026 Sistema Electoral Ecuador
        </div>

    </div>

</body>
</html>