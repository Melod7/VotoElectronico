@model List<VotoElectronico.MVC.Models.Votante>

<div class="container mt-4">

    <!-- BOTONES SUPERIORES -->
    <div class="d-flex justify-content-between align-items-center mb-4">

        <a href="/Admin/PanelAdmin" class="btn btn-outline-secondary">
            ⬅ Volver al panel
        </a>

        <a class="btn btn-success" href="/Admin/CrearVotante">
            ➕ Registrar nuevo votante
        </a>

    </div>

    <!-- TITULO -->
    <div class="mb-3">
        <h2 class="fw-bold">📋 Padrón Electoral</h2>
        <p class="text-muted">Listado oficial de votantes registrados</p>
    </div>

    <!-- TARJETA CONTENEDORA -->
    <div class="card shadow-lg border-0">

        <div class="card-body">

            <div class="table-responsive">

                <table class="table table-hover align-middle">

                    <thead class="table-dark text-center">
                        <tr>
                            <th>Cédula</th>
                            <th>Nombres</th>
                            <th>Apellidos</th>
                            <th>Recinto Electoral</th>
                            <th>Mesa</th>
                            <th>Correo</th>
                            <th>¿Votó?</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>

                    <tbody class="text-center">

                        @foreach (var v in Model)
                        {
                            <tr>

                                <td class="fw-semibold">@v.Cedula</td>

                                <td>@v.Nombres</td>

                                <td>@v.Apellidos</td>

                                <td>
                                    <span class="badge bg-info text-dark px-3 py-2">
                                        @v.Recinto
                                    </span>
                                </td>

                                <td>
                                    <span class="badge bg-primary px-3 py-2">
                                        Mesa @v.Mesa
                                    </span>
                                </td>

                                <td>
                                    @(string.IsNullOrEmpty(v.Correo) ?
                                                                    "<span class='text-muted'>Sin correo</span>" 
                                                                                    : v.Correo)
                                </td>

                                <td>
                                    @if (v.YaVoto)
                                    {
                                        <span class="badge bg-success px-3 py-2">✔ Sí</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger px-3 py-2">✖ No</span>
                                    }
                                </td>

                                <td>
                                    <a class="btn btn-sm btn-danger px-3"
                                       href="/Admin/EliminarVotante?cedula=@v.Cedula"
                                       onclick="return confirm('¿Seguro que deseas eliminar este votante?');">
                                        🗑 Eliminar
                                    </a>
                                </td>

                            </tr>
                        }

                    </tbody>

                </table>

            </div>

        </div>
    </div>

</div>