@model List<VotoElectronico.MVC.Models.Votante>

<div class="d-flex justify-content-between align-items-center mb-3">

    <a href="/Admin/PanelAdmin" class="btn btn-secondary mb-3">
        ⬅ Volver al panel
    </a>

    <a class="btn btn-success" href="/Admin/CrearVotante">
        ➕ Registrar nuevo votante
    </a>

</div>

<h2 class="mb-3">📋 Padrón Electoral</h2>

<table class="table table-striped table-hover shadow">
    <thead class="table-dark">
        <tr>
            <th>Cédula</th>
            <th>Nombres</th>
            <th>Apellidos</th>
            <th>Recinto Electoral</th>
            <th>Número de Mesa</th>
            <th>Correo</th>
            <th>¿Votó?</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in Model)
        {
            <tr>
                <td>@v.Cedula</td>
                <td>@v.Nombres</td>
                <td>@v.Apellidos</td>

                <td>
                    <span class="badge bg-info text-dark">
                        @v.Recinto
                    </span>
                </td>

                <td>
                    <span class="badge bg-primary">
                        Mesa @v.Mesa
                    </span>
                </td>

                <td>
                    @(string.IsNullOrEmpty(v.Correo) ? "Sin correo" : v.Correo)
                </td>

                <td>
                    @if (v.YaVoto)
                    {
                        <span class="badge bg-success">Sí</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">No</span>
                    }
                </td>

                <td>
                    <a class="btn btn-sm btn-danger"
                       href="/Admin/EliminarVotante?cedula=@v.Cedula"
                       onclick="return confirm('¿Seguro que deseas eliminar este votante?');">
                        🗑 Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>