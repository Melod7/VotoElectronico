@model List<VotoElectronico.MVC.Models.ResultadoVM>

@{
    ViewData["Title"] = "Resultados";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div class="container mt-4">

    <h2 class="text-center mb-4">
        📊 Resultados Generales
    </h2>

    <!-- TABLA -->
    <div class="card shadow">
        <div class="card-body">

            <table class="table table-striped table-bordered text-center">
                <thead class="table-dark">
                    <tr>
                        <th>Candidato</th>
                        <th>Partido</th>
                        <th>Total votos</th>
                        <th>Porcentaje</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.NombreCandidato</td>
                            <td>@item.Partido</td>
                            <td>@item.TotalVotos</td>
                            <td>@item.Porcentaje %</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>

    <!-- GRAFICA -->
    <div class="card shadow mt-4">
        <div class="card-body">

            <h4 class="text-center mb-3">📊 Gráfico de votación</h4>

            <canvas id="graficoResultados"></canvas>

        </div>
    </div>

</div>


<script>

    const labels = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Select(x => x.NombreCandidato)));
    const votos = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Select(x => x.TotalVotos)));

    const ctx = document.getElementById('graficoResultados').getContext('2d');

    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: labels,
            datasets: [{
                label: 'Total de votos',
                data: votos,
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    display: true
                }
            },
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });

</script>