@model VotoElectronico.MVC.Models.Partido

@{
    ViewData["Title"] = "Crear Partido";
}

<div class="container mt-5">
    <div class="card shadow p-4">
        <h3 class="text-center mb-4">Crear Partido Político</h3>

        <form asp-action="Crear" method="post">

            <!-- NOMBRE DEL PARTIDO -->
            <div class="mb-3">
                <label class="form-label">Nombre del Partido</label>
                <input asp-for="Nombre" class="form-control" required />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <hr />

            <h5 class="mt-3">Candidatos</h5>

            <!-- PRESIDENTE -->
            <div class="mb-3">
                <label class="form-label">Presidente</label>
                <input name="Presidente" class="form-control" placeholder="Nombre del Presidente" required />
            </div>

            <!-- VICEPRESIDENTE -->
            <div class="mb-3">
                <label class="form-label">Vicepresidente</label>
                <input name="Vicepresidente" class="form-control" placeholder="Nombre del Vicepresidente" required />
            </div>

            <!-- BOTONES -->
            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                <button type="submit" class="btn btn-primary">Guardar Partido</button>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}