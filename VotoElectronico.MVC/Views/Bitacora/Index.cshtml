@model List<VotoElectronico.MVC.ViewModels.BitacoraVM>

@{
    ViewData["Title"] = "Bitácora del Sistema";
}

<div class="container mt-4">
    <h3 class="mb-3">📋 Bitácora del Sistema</h3>

    <div class="card shadow">
        <div class="card-body">
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Fecha</th>
                        <th>Rol</th>
                        <th>Acción</th>
                        <th>Descripción</th>
                        <th>IP</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">
                                No hay registros en la bitácora
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var b in Model)
                        {
                            <tr>
                                <td>@b.Fecha.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                <td>@b.Rol</td>
                                <td>@b.Accion</td>
                                <td>@b.Descripcion</td>
                                <td>@b.Ip</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
            ⬅ Volver
        </a>
    </div>
</div>